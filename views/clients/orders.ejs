<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <ul class="orders__products">

                                    <li class="orders__products-item">
                                        <ul>
                                            <li> Address : <%= order.cart.user.address %></li>
                                            <li>Email : <%= order.cart.user.email %></li>
                                           <li> Quantity : <%= order.cart.qty %></li>
                                           <li> <a href="/clients/orders/<%=order._id%>"> Download Invoice </a></li>
                                        </ul>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>