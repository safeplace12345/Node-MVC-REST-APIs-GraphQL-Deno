<div class="card__actions">
  <button type="button" class="btn">
    <a href="/productDetails/<%= product.id %>"> Details</a>
  </button>
  <form action="/cart" method="post">
    <input
      type="text"
      value="<%= product.id %>"
      id="proID"
      style="display: none"
      name="proID"
    />
    <input
      type="number"
      value="<%= product.price %>"
      id="proPrice"
      style="display: none"
      name="proPrice"
    />
    <% if (path !== '/index') { %>
      <button class="btn" type="submit">Add to Cart</button>
    <% } %>
  </form>
</div>
