<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMsg) { %>
<div class="user-message user-message--error"> <%= errorMsg %></div>
            <% }%>
        <form class="product-form"
        method="POST" action="/reset">

            <div class="form-control">
                <label for="pwd">Password</label>
                <input type="password" name="pwd" id="pwd" >
            </div>
            <input type="text" value="<%=csrfToken%>" style="visibility: hidden;" name="_csrf">
            <input type="text" value="<%=userID%>" style="visibility: hidden;" name="userID">
            <button type="submit" class="btn ">Confirm Reset</button>
        </form>

    </main>
    <%- include('../includes/footer.ejs') %>