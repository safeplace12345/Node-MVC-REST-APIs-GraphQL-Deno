<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/product.css">
<link rel="stylesheet" href="/css/forms.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %> 
    <main>
        <form class="product-form" action="/admin/<% if (editMode) { %> edit-products <% } else  { %>products" <% } %>  method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (editMode) { %> <%= product.title %> <% } %>">
            </div>
            <div class="form-control">
                <label for="image">Image Url</label>
                <input type="text" name="image" id="image" value ="<% if (editMode) { %> <%= product.image %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price" step="0.01" value="<% if (editMode) { %> <%= +product.price %> <% } %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
               <textarea name="description" id="description" cols="30" rows="10" placeholder="Message Us..."><% if (editMode) { %> <%= product.description %> <% } %>   </textarea>
            </div>
            
            <button type="submit" class="btn "><% if (editMode) { %> Update Product <% } else { %>  Add Product <% } %> </button>
        </form>
    </main>
    <%- include('../includes/footer.ejs') %> 